<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigationHeader"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@color/bitcoindotcom_green"
    android:paddingTop="24dp">

    <ImageView
        android:id="@+id/drawer_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_view_white"
        android:padding="8dp"
        android:src="@drawable/ic_store_mall_directory_white_48dp"
        android:tint="@color/bitcoindotcom_green" />

    <TextView
        android:id="@+id/drawer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drawer_avatar"
        android:gravity="center"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>